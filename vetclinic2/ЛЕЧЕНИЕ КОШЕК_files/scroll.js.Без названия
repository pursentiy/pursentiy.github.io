// JavaScript Document
$(document).ready(function(){
	// появление/затухание кнопки #back-top
	$(function (){
		// прячем кнопку #back-top
		$("#bhr").hide();
	
		$(window).scroll(function (){
			if ($(this).scrollTop() > 100){
				$("#bhr").fadeIn();
			} else{
				$("#bhr").fadeOut();
			}
		});

		// при клике на ссылку плавно поднимаемся вверх
		$("#bhr").click(function (){
			$("body,html").animate({
				scrollTop:0
			}, 800);
			return false;
		});
	});
});